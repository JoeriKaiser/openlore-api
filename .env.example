# Server Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://openlore:openlore_secret@postgres:5432/openlore
POSTGRES_USER=openlore
POSTGRES_PASSWORD=openlore_secret
POSTGRES_DB=openlore

# URLs
BETTER_AUTH_URL=https://api.domain.com
CLIENT_URL=https://app.domain.com
CORS_ORIGINS=https://app.domain.com

# Secrets (Generate strong secrets!)
BETTER_AUTH_SECRET=your-secure-secret-here-min-32-chars
AUTH_SECRET=your-secure-secret-here-min-32-chars
ENCRYPTION_SECRET=your-secure-secret-here-min-32-chars

# OpenRouter
OPENROUTER_REFERER=https://app.domain.com

# Embeddings
EMBEDDINGS_MODEL_ID=Xenova/bge-small-en-v1.5
EMBEDDINGS_LOCAL_PATH=/app/models

# RAG Configuration
RAG_TOP_K=6
RAG_CHUNK_TOKENS=240
RAG_CHUNK_OVERLAP_TOKENS=40

# Passkey Configuration
PASSKEY_RP_ID=localhost

# Registration
REGISTRATION_ENABLED=false
